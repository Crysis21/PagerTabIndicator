<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PagerTabsIndicator">
        <attr name="tab_padding" format="dimension"/>
        <attr name="tab_text_color" format="color"/>
        <attr name="tab_text_size" format="dimension"/>
        <attr name="tab_show_divider" format="boolean"/>
        <attr name="tab_lock_expanded" format="boolean"/>
        <attr name="tab_indicator"/>
        <attr name="tab_indicator_resource" format="reference"/>
        <attr name="tab_indicator_scale_type"/>
        <attr name="tab_indicator_height" format="dimension"/>
        <attr name="tab_indicator_vertical_offset" format="dimension"/>
        <attr name="tab_indicator_background_height" format="dimension"/>
        <attr name="tab_indicator_color" format="color"/>
        <attr name="tab_indicator_background_color" format="color"/>
        <attr name="tab_indicator_corner_radius" format="dimension"/>
        <attr name="tab_indicator_width" format="dimension"/>
        <attr name="tab_indicator_width_percent" format="float"/>
        <attr name="tab_divider_width" format="dimension"/>
        <attr name="tab_divider_margin" format="dimension"/>
        <attr name="tab_divider_color" format="color"/>
        <attr name="tab_divider_resource" format="reference"/>
        <attr name="tab_show_bar_indicator" format="boolean"/>
        <attr name="tab_elevation" format="dimension"/>
        <attr name="tab_disable_animation" format="boolean"/>
        <attr name="tab_highlight_text" format="boolean"/>
        <attr name="tab_highlight_text_color" format="color"/>
    </declare-styleable>

    <attr name="tab_indicator">
        <enum name="top_bar" value="0" />
        <enum name="bottom_bar" value="1" />
        <enum name="background" value="2" />
    </attr>

    <attr name="tab_indicator_scale_type">
        <enum name="fitXY" value="0"/>
        <enum name="centerInside" value="1"/>
    </attr>
</resources>